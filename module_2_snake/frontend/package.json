{
  "name": "ai-devtools-snake",
  "version": "1.0.0",
  "description": "Snake game mock frontend with auth, leaderboard, and live watching.",
  "type": "module",
  "scripts": {
    "test": "node tests/runTests.js",
    "start:backend": "cd ../backend && uv run uvicorn main:app --host 0.0.0.0 --port 8000",
    "start:frontend": "python -m http.server 8080",
    "dev": "concurrently -k \"npm run start:backend\" \"npm run start:frontend\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
